# Sardis Smart Contract Deployment Configuration
# Copy this file to .env and fill in the values

# ============ REQUIRED ============

# Deployer wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Base Sepolia RPC URL (from Alchemy, Infura, or QuickNode)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# ============ VERIFICATION ============

# Basescan API key for contract verification
BASESCAN_API_KEY=your_basescan_api_key

# ============ OPTIONAL ============

# Recovery address (defaults to deployer if not set)
RECOVERY_ADDRESS=

# Other testnet RPC URLs
POLYGON_AMOY_RPC_URL=
SEPOLIA_RPC_URL=
ARBITRUM_SEPOLIA_RPC_URL=
OPTIMISM_SEPOLIA_RPC_URL=

# Other block explorer API keys
POLYGONSCAN_API_KEY=
ETHERSCAN_API_KEY=
ARBISCAN_API_KEY=
OPTIMISM_API_KEY=
