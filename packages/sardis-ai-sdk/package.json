{
  "name": "@sardis/ai-sdk",
  "version": "0.1.0",
  "description": "Sardis payment tools for Vercel AI SDK - Enable AI agents to make payments with policy guardrails",
  "keywords": [
    "ai",
    "ai-sdk",
    "vercel-ai",
    "payments",
    "agents",
    "autonomous-agents",
    "stablecoin",
    "crypto",
    "fintech",
    "sardis",
    "llm",
    "openai",
    "anthropic",
    "function-calling",
    "tools"
  ],
  "author": "Sardis <hello@sardis.sh>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sardis-project/sardis.git",
    "directory": "packages/sardis-ai-sdk"
  },
  "homepage": "https://sardis.sh",
  "bugs": {
    "url": "https://github.com/sardis-project/sardis/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tools": {
      "import": "./dist/tools.js",
      "types": "./dist/tools.d.ts"
    },
    "./provider": {
      "import": "./dist/provider.js",
      "types": "./dist/provider.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "@sardis/sdk": "^0.2.0",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "ai": ">=3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ai": "^6.0.68",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
