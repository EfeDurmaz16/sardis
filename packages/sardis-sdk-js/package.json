{
  "name": "@sardis/sdk",
  "version": "0.2.0",
  "description": "Official TypeScript SDK for the Sardis stablecoin execution layer - Enable AI agents to execute programmable payments using stablecoins",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/index.js",
  "browser": "dist/browser/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/browser/index.js",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./browser": {
      "types": "./dist/index.d.ts",
      "import": "./dist/browser/index.js",
      "default": "./dist/browser/index.js"
    },
    "./integrations/*": {
      "types": "./dist/integrations/*.d.ts",
      "import": "./dist/integrations/*.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:browser",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:browser": "node ./scripts/build-browser.mjs",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "sardis",
    "stablecoin",
    "payments",
    "ai-agents",
    "ai-payments",
    "blockchain",
    "usdc",
    "web3",
    "mpc",
    "wallet",
    "typescript",
    "sdk",
    "fintech",
    "defi",
    "crypto-payments",
    "programmable-payments"
  ],
  "author": "Sardis <sdk@sardis.network>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sardis-network/sardis-sdk-js.git"
  },
  "homepage": "https://sardis.network",
  "bugs": {
    "url": "https://github.com/sardis-network/sardis-sdk-js/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/sardis-network"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "msw": "^2.12.9",
    "rollup": "^4.57.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": ">=4.7.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false
}
