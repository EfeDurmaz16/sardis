# Sardis Sandbox Environment Configuration
# Copy to .env or source directly: source sandbox/env.sandbox.template

# Environment
SARDIS_ENVIRONMENT=sandbox

# Security (sandbox-only key)
SARDIS_SECRET_KEY=sandbox-secret-key-not-for-production-use

# Database (local SQLite)
DATABASE_URL=sqlite:///./sandbox/data/sardis.db

# Chain execution (simulated)
SARDIS_CHAIN_MODE=simulated

# API
SARDIS_API_BASE_URL=http://localhost:8001

# CORS (allow all for development)
SARDIS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8001

# Caching (in-memory)
REDIS_URL=

# Logging
SARDIS_LOG_LEVEL=DEBUG
SARDIS_LOG_FORMAT=pretty

# Demo API Key (for sandbox testing)
SARDIS_DEMO_API_KEY=sk_sandbox_demo_1234567890abcdef



