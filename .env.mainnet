# Sardis Mainnet Deployment Configuration
# Copy to .env and fill in values before deploying

# ─── Chain Mode ───────────────────────────────────────────────
SARDIS_CHAIN_MODE=live
SARDIS_EXECUTION_MODE=production_live

# ─── Deployer ─────────────────────────────────────────────────
# Private key for contract deployment (NEVER commit this)
# PRIVATE_KEY=
# RECOVERY_ADDRESS=
CONFIRM_MAINNET=false

# ─── RPC URLs (Alchemy recommended) ──────────────────────────
SARDIS_BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
SARDIS_POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
SARDIS_ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
SARDIS_ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
SARDIS_OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY

# ─── Block Explorer API Keys (for contract verification) ─────
# BASESCAN_API_KEY=
# POLYGONSCAN_API_KEY=
# ETHERSCAN_API_KEY=
# ARBISCAN_API_KEY=
# OPTIMISTIC_ETHERSCAN_API_KEY=

# ─── Deployed Contract Addresses (fill after deployment) ─────
# Phase 1
# SARDIS_WALLET_FACTORY_BASE=
# SARDIS_LEDGER_ANCHOR_BASE=
# SARDIS_AGENT_REGISTRY_BASE=

# Phase 2 (Circle RefundProtocol)
# SARDIS_REFUND_PROTOCOL_BASE=
# SARDIS_ARBITER_BASE=

# ─── Circle Paymaster (permissionless, no deployment needed) ─
SARDIS_PAYMASTER_PROVIDER=circle
CIRCLE_PAYMASTER_ADDRESS=0x0578cFB241215b77442a541325d6A4E6dFE700Ec
CIRCLE_PAYMASTER_TESTNET=0x3BA9A96eE3eFf3A69E2B18886AcF52027EFF8966

# ─── CCTP V2 (same across all chains) ────────────────────────
CCTP_TOKEN_MESSENGER_V2=0x28b5a0e9C621a5BadaA536219b3a228C8168cf5d
CCTP_MESSAGE_TRANSMITTER_V2=0x81D40F21F12A8F0E3252Bccb954D722d4c464B64

# ─── Database ─────────────────────────────────────────────────
# DATABASE_URL=postgresql://...

# ─── Redis ────────────────────────────────────────────────────
# SARDIS_REDIS_URL=

